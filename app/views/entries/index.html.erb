<p id="notice"><%= notice %></p>
<div class="p-4">
  <% if policy(@dataset).update? %>
    <div class="flex w-full justify-around">
      <%= link_to "Enviar CSV", dataset_upload_url, class:"inline-block bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Deletar Base",  dataset_del_entries_url(@dataset), method: :delete, data: { confirm: 'Are you sure? There is no comming back' }, class:"inline-block bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Adicionar Entrada", "#", class:"inline-block bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>  
  <% end %>
  <div class="self-stretch overflow-y-auto overflow-x-hidden" style="max-height:250px">
  <table class="table-fixed w-full">
    <thead>
      <tr>
        <th class="px-4 py-2 w-3/4">Exemplo</th>
        <% if policy(@dataset).update? %>
          <th class="px-4 py-2 w-1/4" colspan="3">Ações</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td class="h-10 m-2 border-gray-800 border-2 overflow-hidden"><%= entry.text %></td>
          <% if policy(@dataset).update? %>
            <td class="border-gray-800 border-2 m-2"><%= link_to 'Show', entry %></td>
            <td class="border-gray-800 border-2 m-2"><%= link_to 'Edit', edit_entry_path(entry) %></td>
            <td class="border-gray-800 border-2 m-2"><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>