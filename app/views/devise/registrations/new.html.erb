<div class="w-96 max-w-lg">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8">
  <div class="mb-4">
    <%= f.label :email, class:"block text-gray-700 text-xl font-bold"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow text-base appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= f.label :password , class:"block text-gray-700 text-xl font-bold"%>
    <% if @minimum_password_length %>
    <em class="text-xs">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"shadow text-base appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class:"block text-gray-700 text-xl font-bold" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"shadow text-base appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="actions flex items-center justify-between mx-10">
     <%= f.submit "Sign up", class:"bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
     <%= link_to "Login", new_user_session_path, class:"bg-orange-500 hover:bg-orange-700 text-white visited:text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
</div>
<% end %>
</div>
