<div class="grid grid-cols-2">
  <div class="w-96 max-w-lg bg-white shadow-md shadow-l-none rounded rounded-r-none px-8 pt-6 pb-8">
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class:"block text-gray-700 text-xl font-bold mb-2"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"shadow text-base appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder:"Email"%>
      </div>

      <div class="mb-4">
        <%= f.label :senha, class:"block text-gray-700 text-xl font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"text-base shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", placeholder:"Senha" %>
      </div>

      <% if devise_mapping.rememberable? and false %>
        <div class="mb-6">
          <%= f.check_box :remember_me, class:"inline-block focus:outline-none focus:shadow-outline" %>
          <%= f.label :remember_me, class:"inline-block" %>
        </div>
      <% end %>

      <div class="actions flex items-center justify-between">
        <%= f.submit "Sign in", class:"bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline shadow-inner"%>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class:"align-baseline font-bold text-sm bg-gray-400 hover:bg-orange-800 hover:text-white rounded px-2 py-2 focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
  <div class="w-96 max-2-lg bg-white shadow-md shadow-l-none rounded rounded-l-none px-8 pt-6 pb-8">
    <h1 class="text-orange-500 text-2xl mb-4 border-solid border-teal-300"> Ainda nao possui conta?</h1>
    <p class="mb-4"> Crie sua conta e tenha acesso ao melhor sistema de ajuda a anotação disponivel no momento </p >
    <div class="w-full text-center mt-20"> <%= link_to "Registrar", new_user_registration_path, class:"bg-orange-500 hover:bg-orange-700 text-white visited:text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %></div>
  </div>
</div>