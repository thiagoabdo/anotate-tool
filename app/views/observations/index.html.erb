<p id="notice"><%= notice %></p>
<div class="p-4">
<table class="table-fixed w-full">
  <thead>
    <tr>
      <th class="w-5/12">Classe</th>
      <th class="w-3/12">Possiveis Valores</th>
      <% if policy(@dataset).update? %>
        <th class="w-3/12" colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @observations.each do |observation| %>
      <tr>
        <td class="h-10 m-2 border-gray-800 border-2 overflow-hidden"><%= observation.name %></td>
        <td class="h-10 m-2 border-gray-800 border-2 overflow-hidden">
          <%= observation.attr_values.map{ |v| v.value }.join(', ') %>
        </td>
        <% if policy(@dataset).update? %>
          <td class="border-gray-800 border-2 m-2"><%= link_to 'Show', observation %></td>
          <td class="border-gray-800 border-2 m-2"><%= link_to 'Edit', edit_observation_path(observation) %></td>
          <td class="border-gray-800 border-2 m-2"><%= link_to 'Destroy', observation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if policy(@dataset).update? %>
  <%= link_to 'Nova Classe',  new_dataset_observation_url(@dataset), class:"mt-4 inline-block bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"  %>  
<% end %>

</div>
