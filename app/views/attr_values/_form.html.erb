<%= form_with(model: attr_value, local: true) do |form| %>
  <% if attr_value.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(attr_value.errors.count, "error") %> prohibited this attr_value from being saved:</h2>

      <ul>
        <% attr_value.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value %>
  </div>

  <div class="field">
    <%= form.select :observation_id, @observations.collect {|observation| [observation.name + String(observation.id), observation.id]} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
