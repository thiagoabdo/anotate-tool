<p id="notice"><%= notice %></p>

<h1>Attr Values</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Attribute</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attr_values.each do |attr_value| %>
      <tr>
        <td><%= attr_value.value %></td>
        <td><%= attr_value.attribute_id %></td>
        <td><%= link_to 'Show', attr_value %></td>
        <td><%= link_to 'Edit', edit_attr_value_path(attr_value) %></td>
        <td><%= link_to 'Destroy', attr_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

