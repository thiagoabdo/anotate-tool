<p id="notice"><%= notice %></p>

<div class="">
  <div class="flex w-full justify-around">
      <% items = [["Anotar Projeto", dataset_choose_class_url(@dataset)], ["Minhas Ultimas Anotações", "#"]] %>
      <% items.each do |item| %>
        <%= link_to item[0], item[1], class:"m-4 px-4 py-2 text-center border-orange-500 border-2 rounded-full hover:shadow-lg hover:border-orange-700 hover:bg-indigo-400 w-full"%> 
      <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Attr value</th>
      <th>User</th>
      <th>Entry</th>
      <th>Attribute</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notations.each do |notation| %>
      <tr>
        <td><%= notation.attr_value_id %></td>
        <td><%= notation.user_id %></td>
        <td><%= notation.entry_id %></td>
        <td><%= notation.observation_id %></td>
        <td><%= link_to 'Show', notation %></td>
        <td><%= link_to 'Edit', edit_notation_path(notation) %></td>
        <td><%= link_to 'Destroy', notation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notation', new_notation_path %>
