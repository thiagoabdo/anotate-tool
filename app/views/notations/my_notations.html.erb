<div class="p-4">
<table class="table-fixed w-full overflow-y-auto max-h-screen">
  <thead>
    <tr>
      <th class="w-5/12">Entrada</th>
      <th class="w-2/12">Classe</th>
      <th class="w-2/12">Classificacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notations.each do |notation| %>
      <tr>
        <td class="border-2 border-gray-800 overflow-hidden m-2 h-10 px-2"><%= notation.entry.text %></td>
        <td class="border-2 border-gray-800 overflow-hidden m-2 h-10 px-2"><%= notation.observation.name %></td>
        <td class="border-2 border-gray-800 overflow-hidden m-2 h-10 px-2"><%= notation.attr_value.value %></td>
        <td class="border-2 border-gray-800 overflow-hidden m-2 h-10 px-2 hover:bg-gray-300"><%= link_to 'Show', notation %></td>
        <td class="border-2 border-gray-800 overflow-hidden m-2 h-10 px-2 hover:bg-gray-300"><%=link_to 'Edit', edit_notation_path(notation) %></td>
        <td class="border-2 border-gray-800 overflow-hidden m-2 h-10 px-2 hover:bg-gray-300"><%= link_to 'Destroy', notation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>